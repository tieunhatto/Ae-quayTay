@model IEnumerable<TestDemo.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Danh sách các món ăn ngon</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table table-striped table-condensed">
    <tr>
        <th>
           Hình ảnh
        </th>
        <th>
            Mã sản phẩm
        </th>
        <th>
            Tên sản phẩm
        </th>
        <th>
            số lượng
        </th>
        <th>
            đơn giá
        </th>
        <th>chức năng</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Images)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Qty)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.ProID }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.ProID }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.ProID })
        </td>
    </tr>
}
</table>

